APP BACKEND (wsite/backend/)
# Run locally, connecting to local db database
cargo run

# Run production when db is on the same machine
cd /root/wsite/frontend && trunk build --release && \
cd /root/wsite/backend && cargo build --release && \ 
pkill backend ; \
APP_ENVIRONMENT=production \
APP__SESSION_SECRET= \
setsid nohup cargo run --release -- --start &>server.log &


APP FRONTEND (wsite/frontend/)
# build assets
trunk build --release
# start frontend server, for development
trunk serve


SYSTEM
# List Db manager's listeners
netstat -tulpn | grep http_server
# List listeners
netstat -tulpn
# Capture Db server packets
tcpdump -n udp port 5645

